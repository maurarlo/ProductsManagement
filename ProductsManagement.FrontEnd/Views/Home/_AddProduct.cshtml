@model ProductsManagement.FrontEnd.Models.ProductViewModel

<fieldset>
    @using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post, new { @class = "general-form" }))
    {
        <div class="editor-label">
            @Html.LabelFor(model => model.Number)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { style = "width: 100%" } })
            @Html.ValidationMessageFor(model => model.Number)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { style = "width: 100%" } })
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { style = "width: 100%" } })
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div style="text-align: right; padding-top: 6px;">
            <input id="btnAddProduct" class="btn-primary" type="submit" value="Save">
        </div>
    }
</fieldset>